public Integer nextPrime(Integer num) {
    //code here
    //2,3,5,7,11,13..
    while(!isPrime(num)){
        num++;
    }
    
    return num;
    
}

public Boolean isPrime(Integer num){
    if(num==1){
        return false;
    }
    Boolean isPrime = true;
    for(Integer i=2; i<num-1;i++){
        Integer remainder = Math.mod(num,i);
        if(remainder == 0){
            isPrime = false;
            continue;
        }

    }
    return isPrime;
}