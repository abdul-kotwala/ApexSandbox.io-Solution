public String changeTimeFormat(String strTime) {
    //code here
    String hour = strTime.substringBefore(':');
    String minutes = strTime.substringAfter(':');
    Integer hourInteger = Math.abs(Integer.valueOf(hour));

    if(hourInteger==0){
        return String.valueOf(12) + ':' + minutes;
    }else if(hourInteger < 12){
        return String.valueOf(hourInteger) + ':' + minutes;
    }else{
        return String.valueOf(hourInteger-12) + ':' + minutes;
    }

   

}